{
  "kind": "collectionType",
  "collectionName": "news_articles",
  "info": {
    "singularName": "news-article",
    "pluralName": "news-articles",
    "displayName": "NewsArticle"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Bonuses",
        "Security  ",
        "Payments",
        "Mobile",
        "Reviews",
        "News",
        "Guides"
      ]
    },
    "publishedDate": {
      "type": "date"
    },
    "author": {
      "type": "text"
    },
    "readTime": {
      "type": "integer"
    }
  }
}
